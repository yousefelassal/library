<style>
    h2 {
        font-family: "Eczar", serif;
    }

    h2,
    h3 {
        color: var(--secondary-color);
    }

    h3.page {
        cursor: pointer;
        @apply text-sm px-4 py-2 justify-center align-middle flex gap-2 font-semibold place-items-center;
    }

    h3.page:hover {
        @apply text-gray-500;
    }

    h3.page:hover svg {
        @apply fill-gray-500;
    }

    h3.page.active {
        @apply bg-[var(--primary-color)] rounded-full;
    }

    h3.page.active:hover {
        @apply text-current;
    }

    h3.page.active:hover svg {
        @apply fill-current;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr;
        gap: 0px 0px;
        width: 100vw;
    }
</style>

<script>
    const pages = document.querySelectorAll(".page");
    pages.forEach((page) => {
        page.addEventListener("click", () => {
            pages.forEach((page) => page.classList.remove("active"));
            page.classList.add("active");
        });
    });
</script>
