---
import ProfileIcon from '../components/ProfileIcon.astro';
---

<div class="sticky grid-container place-items-center p-4 align-middle">
    <div class="justify-self-start">
        <h2 class="text-4xl">Library</h2>
    </div>
    <div class="flex gap-4 place-items-center">
        <h3 class="page active">Books</h3>
        <h3 class="page">AudioBooks</h3>
    </div>
    <div class="justify-self-end">
        <ProfileIcon />
    </div>
</div>

<style>
    h2{
        font-family: 'Eczar', serif;
    }

    h2, h3{
        color: var(--secondary-color);
    }

    h3.page{
        cursor: pointer;
        @apply text-sm px-4 py-2;
    }

    h3.page:hover{
        @apply text-gray-500;
    }

    h3.page.active{
        @apply bg-[var(--primary-color)] rounded-full;
    }

    h3.page.active:hover{
        @apply text-current;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr;
        gap: 0px 0px;
        width:100vw;
    }

</style>

<script>
    const pages = document.querySelectorAll('.page');
    pages.forEach(page => {
        page.addEventListener('click', () => {
            pages.forEach(page => page.classList.remove('active'));
            page.classList.add('active');
        })
    })
</script>